@model List<HighlightCategoryViewModel>

@if (Model.Count > 0)
{
    <section id="linhas" class="fade">
        <h3 class="text-center mt-2">Navegue pelas nossas categorias de produtos</h3>
        <div class="row">
            <div class="col-lg-12">
                <ul class="linhas-list">
                    @foreach (HighlightCategoryViewModel item in Model)
                    {
                        <li>
                            <div class="card-linha">
                                <img src="@item.Image" class="d-block w-100" alt="@item.Title" title="@item.Title" />
                            </div>
                            <div class="card-linha-title ">@item.Title</div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </section>
}