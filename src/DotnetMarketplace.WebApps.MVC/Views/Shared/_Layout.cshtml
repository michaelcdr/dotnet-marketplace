<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
     
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/slick/slick.css">
    <link rel="stylesheet" href="~/lib/slick/slick-theme.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/estilos.css">
    <link rel="stylesheet" href="~/lib/sweetAlert2/sweetalert2.min.css">
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DotnetMarketplace.WebApps.MVC.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
       <vc:nav />
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-3 text-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xs-12 p-3 text-center">
                    <h5>Atendimento</h5>
                    <address>
                        Rua whatever, 376, Bairro Cruzeiro, Caxias do Sul, RS
                    </address>
                    <ul class="lista-contatos list-unstyled">
                        <li>
                            <span>
                                <i class="fa fa-phone"></i>
                                (54) 9999-99999
                            </span>
                        </li>
                        <li>
                            <span class="whats">
                                <i class="fa fa-phone"></i>
                                (54) 9999-99999
                            </span>
                        </li>
                        <li>
                            <span class="email">
                                <i class="fa fa-envelope"></i>
                                <a href="mailto:contato@lojawhatever.com.br">contato@lojawhatever.com.br</a>
                            </span>
                        </li>
                    </ul>
                </div>

                <div class="col-md-6 col-xs-12 p-3 text-center">
                    <h5>Curta-nos nas Redes Sociais</h5>
                    <ul class="list-unstyled social-media-footer">
                        <li class="face">
                            <a target="_blank" href="">
                                <i class="fa fa-2x fa-facebook-square"></i>
                            </a>
                        </li>
                        <li class="youtube">
                            <a target="_blank" href="">
                                <i class="fa fa-2x fa-youtube"></i>
                            </a>
                        </li>
                        <li class="insta">
                            <a target="_blank" href="">
                                <i class="fa fa-2x fa-instagram"></i>
                            </a>
                        </li>
                        <li class="twitter">
                            <a target="_blank" href="">
                                <i class="fa fa-2x fa-twitter"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-12 text-center">
                    <small>
                        Copyright © 1999-2019 michaelcdr.com.br LTDA.
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/lib/sweetAlert2/sweetalert2.min.js"></script>
    <script src="~/js/sweetAlertHelper.js"></script>
    <script src="~/js/models/Home.js"></script>
    <script src="~/js/models/Carrossel.js"></script>
    <script src="~/js/scripts.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
