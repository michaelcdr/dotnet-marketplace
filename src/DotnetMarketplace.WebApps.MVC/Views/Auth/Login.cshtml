@model UserLogin

@{
    ViewData["Title"] = "Loja Whatever - Sua loja de instrumentos músicais e acessórios";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<main>
    <div class="container-login">
        <div class="col-md-12">
            <form asp-action="Login" asp-controller="Auth" class="form-signin mt-5" id="form-login" method="post">
                <div class="card p-3">
                    <h1 class="h4 mb-3 font-weight-normal text-center ">
                        Olá! Para continuar, digite o seu login e senha
                    </h1>
                    <label for="UserName" class="sr-only">Login</label>
                    <input type="login" asp-for="UserName" class="form-control" placeholder="Informe seu login" autofocus="">

                    <label for="password" class="sr-only">Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Informe sua senha" >

                    <button class="btn btn-lg btn-block mt-3 btn-outline-dark" 
                        data-loading-text="Processando, aguarde <i class='fa fa-circle-o-notch fa-spin'></i>" type="submit">
                        Entrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>